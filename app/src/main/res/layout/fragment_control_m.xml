<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control_mFragment">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/control_m_layout_ph"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/control_m_icon1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/ph_drop_b"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/control_m_lblph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center"
                    android:text="pH"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_icon1"
                    app:layout_constraintStart_toEndOf="@+id/control_m_icon1"
                    app:layout_constraintTop_toTopOf="@+id/control_m_icon1" />


                <ImageView
                    android:id="@+id/control_m_icon2"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/arrow_up"
                    app:layout_constraintEnd_toEndOf="@+id/control_m_icon1"
                    app:layout_constraintTop_toBottomOf="@+id/control_m_icon1" />

                <ImageView
                    android:id="@+id/control_m_icon3"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="48dp"
                    android:src="@drawable/arrow_down"
                    app:layout_constraintEnd_toEndOf="@+id/control_m_icon2"
                    app:layout_constraintTop_toBottomOf="@+id/control_m_icon2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pH Up"
                    app:layout_constraintEnd_toEndOf="@+id/control_m_icon2"
                    app:layout_constraintStart_toStartOf="@+id/control_m_icon2"
                    app:layout_constraintTop_toBottomOf="@+id/control_m_icon2" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pH Down"
                    app:layout_constraintEnd_toEndOf="@+id/control_m_icon3"
                    app:layout_constraintStart_toStartOf="@+id/control_m_icon3"
                    app:layout_constraintTop_toBottomOf="@+id/control_m_icon3" />

                <EditText
                    android:id="@+id/control_m_txtphup"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_icon2"
                    app:layout_constraintStart_toEndOf="@+id/control_m_icon2"
                    app:layout_constraintTop_toTopOf="@+id/control_m_icon2" />

                <EditText
                    android:id="@+id/control_m_txtphdown"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_icon3"
                    app:layout_constraintStart_toEndOf="@+id/control_m_icon3"
                    app:layout_constraintTop_toTopOf="@+id/control_m_icon3" />

                <Button
                    android:id="@+id/control_m_btnphup"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/layout_round_btn"
                    android:text="Pour"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtphup"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtphup" />

                <Button
                    android:id="@+id/control_m_btnphdown"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/layout_round_btn"
                    android:text="Pour"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtphdown"
                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtphdown" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ml"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtphup"
                    app:layout_constraintStart_toEndOf="@+id/control_m_txtphup"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtphup" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ml"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtphdown"
                    app:layout_constraintStart_toEndOf="@+id/control_m_txtphdown"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtphdown" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/control_m_layout_nutrient"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/control_m_layout_ph">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/chemical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_m_lblnut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:gravity="center"
                    android:text="Nutrient"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text="A"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="48dp"
                    android:gravity="center"
                    android:text="B"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <EditText
                    android:id="@+id/control_m_txtnutA"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textView13"
                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    app:layout_constraintTop_toTopOf="@+id/textView13" />

                <EditText
                    android:id="@+id/control_m_txtnutB"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="32dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textView14"
                    app:layout_constraintStart_toEndOf="@+id/textView14"
                    app:layout_constraintTop_toTopOf="@+id/textView14" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ml"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtnutA"
                    app:layout_constraintStart_toEndOf="@+id/control_m_txtnutA"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtnutA" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ml"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtnutB"
                    app:layout_constraintStart_toEndOf="@+id/control_m_txtnutB"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtnutB" />

                <Button
                    android:id="@+id/control_m_btnnutA"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/layout_round_btn"
                    android:text="Pour"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtnutA"
                    app:layout_constraintStart_toEndOf="@+id/textView15"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtnutA" />

                <Button
                    android:id="@+id/control_m_btnnutB"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/layout_round_btn"
                    android:text="Pour"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/control_m_txtnutB"
                    app:layout_constraintStart_toEndOf="@+id/textView16"
                    app:layout_constraintTop_toTopOf="@+id/control_m_txtnutB" />


            </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>