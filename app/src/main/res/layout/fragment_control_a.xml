<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control_aFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/control_a_icon1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ph_drop_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/control_a_lblph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="pH"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/control_a_icon1"
            app:layout_constraintStart_toEndOf="@+id/control_a_icon1"
            app:layout_constraintTop_toTopOf="@+id/control_a_icon1" />

        <TextView
            android:id="@+id/control_a_lblrange"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:text="Range"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/control_a_icon1"
            app:layout_constraintTop_toBottomOf="@+id/control_a_icon1" />

        <EditText
            android:id="@+id/control_a_txt_phfrom"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="@+id/control_a_lblrange"
            app:layout_constraintStart_toEndOf="@+id/control_a_lblrange"
            app:layout_constraintTop_toTopOf="@+id/control_a_lblrange" />

        <TextView
            android:id="@+id/control_a_lblbtw"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:text="between"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/control_a_txt_phfrom"
            app:layout_constraintStart_toEndOf="@+id/control_a_txt_phfrom"
            app:layout_constraintTop_toTopOf="@+id/control_a_txt_phfrom" />

        <EditText
            android:id="@+id/control_a_txt_phtill"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="@+id/control_a_lblbtw"
            app:layout_constraintStart_toEndOf="@+id/control_a_lblbtw"
            app:layout_constraintTop_toTopOf="@+id/control_a_lblbtw" />

        <Button
            android:id="@+id/control_a_btn_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="24dp"
            android:text="Set"
            android:background="@drawable/layout_round_btn"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="*Once set system will automated to adjust and maintain the pH level of water."
            app:layout_constraintStart_toStartOf="@+id/control_a_lblrange"
            app:layout_constraintTop_toBottomOf="@+id/control_a_lblrange" />

        <TextView
            android:id="@+id/control_a_err1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="*Wrong Format"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>